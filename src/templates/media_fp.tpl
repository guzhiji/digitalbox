<!-- flash ("swf") -->
<object width="{$Media_Width}" height="{$Media_Height}">
    <param name="movie" value="{$Media_Address}"></param>
    <param name="allowFullScreen" value="true"></param>
    <param name="allowscriptaccess" value="always"></param>
    <embed src="{$Media_Address}" type="application/x-shockwave-flash" width="{$Media_Width}" height="{$Media_Height}" allowscriptaccess="always" allowfullscreen="true"></embed>
</object>